generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  username String
  email     String      @unique
  password  String
  passwordChangeAt DateTime
  role UserRole
  status UserStatus
  photoURL String
  phone String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  lostItem LostItem[]

  @@map("users")
}

model LostItem {
  id        String      @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  title String
  description String
  category String
  brand String
  isFound Boolean @default(false)
  lostDate DateTime?
  lostLocation DateTime?
  images String[]
  email String
  phone String
  username String
}

enum UserRole {
  admin
  user
}

enum UserStatus {
  activate
  deactivate
}

